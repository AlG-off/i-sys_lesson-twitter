{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "no-shadow": 1,
    "one-var": [
      0,
      "never"
    ],
    "one-var-declaration-per-line": 1,
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "no-case-declarations": 1,
    "default-case": 1,
    "no-use-before-define": 0,
    "func-name-matching": 1
  }
}