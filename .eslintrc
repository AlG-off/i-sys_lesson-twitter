{
  "extends": "airbnb-base",
  "parser": "babel-eslint",
  "env": {
    "browser": true,
    "node": true
  },
  "rules": {
    "strict": 0,
    "no-shadow": 1,
    "one-var": [
      0,
      "never"
    ],
    "one-var-declaration-per-line": 1,
    "indent": [
      2,
      4,
      {
        "SwitchCase": 1
      }
    ],
    "arrow-parens": [
      2,
      "as-needed",
      {
        "requireForBlockBody": false
      }
    ],
    "space-before-function-paren": [
      2,
      "never"
    ],
    "no-case-declarations": 1,
    "default-case": 1,
    "no-use-before-define": 0,
    "func-name-matching": 1,
    "quotes": [
      2,
      "single",
      {
        "allowTemplateLiterals": true
      }
    ],
    "comma-dangle": [
      2,
      "never"
    ]
  }
}